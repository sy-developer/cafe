<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.stockMapper">
   <select id="stockList" parameterType="java.util.Map" resultType="stockDTO">
      <![CDATA[   select * from (select rownum rn, tt.*from (select * from menu_stock order by stock_num desc)tt) 
      where rn >=#{startNum} and rn <=#{endNum}]]>
   </select>
      
   <select id="stockListAll" parameterType="String" resultType="stockDTO">
      select * from menu_stock where sep = #{sep}
   </select>
      
   <select id="getTotal" resultType="int">
      select count(*) as cnt from menu_stock
   </select>   
   
   <select id="stockView" parameterType="int" resultType="stockDTO">
      select * from menu_stock where stock_num=#{stock_num}
   </select>
   
   <select id="stockViewPart" parameterType="String" resultType="stockDTO">
      select * from menu_stock where stock_num like #{menu_name}
   </select>
   
</mapper>