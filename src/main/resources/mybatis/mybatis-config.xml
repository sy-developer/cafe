<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
 PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 클래스에 별명 설정 -->
	<typeAliases>
		<!-- <typeAlias type="board.bean.BoardDTO" alias="dto1"/> -->
		<typeAlias type="board.bean.BoardDTO" alias="boardDTO" />
		<typeAlias type="notice.bean.NoticeDTO" alias="noticeDTO" />
		<typeAlias type="member.bean.MemberDTO" alias="memberDTO" />
		<typeAlias type="menu.bean.MenuDTO" alias="menuDTO" />
		<typeAlias type="market.bean.MarketDTO" alias="marketDTO" />
		<typeAlias type="stock.bean.StockDTO" alias="stockDTO" />

	</typeAliases>

	<mappers>
		<!-- 각 테이블에 맞추어 mapping.xml을 만들어야 합니다. -->
		<!-- <mapper resource="mybatis/board-mapping.xml"/> -->
		<mapper resource="mybatis/board-mapping.xml" />
		<mapper resource="mybatis/notice-mapping.xml" />
		<mapper resource="mybatis/member-mapping.xml" />
		<mapper resource="mybatis/menu-mapping.xml" />
		<mapper resource="mybatis/market-mapping.xml" />
		<mapper resource="mybatis/stock-mapping.xml" />

	</mappers>
</configuration>