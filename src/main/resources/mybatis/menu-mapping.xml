<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.menuMapper">
   <select id="menuList" parameterType="java.util.Map" resultType="menuDTO">
      <![CDATA[   select * from (select rownum rn, tt.*from (select * from menu order by stock_num desc)tt) 
      where rn >=#{startNum} and rn <=#{endNum}]]>
   </select>
      
   <select id="menuListAll" parameterType="String" resultType="menuDTO">
      select * from menu where sep = #{sep}
   </select>
      
   <select id="getTotal" resultType="int">
      select count(*) as cnt from menu
   </select>   
   
   <select id="menuView" parameterType="int" resultType="menuDTO">
      select * from menu where stock_num=#{stock_num}
   </select>
   
   <select id="menuViewPart" parameterType="String" resultType="menuDTO">
      select * from menu where stock_num like #{menu_name}
   </select>
   
</mapper>